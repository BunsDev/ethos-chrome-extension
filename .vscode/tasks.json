{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "all",
      "type": "shell",
      "command": "npx jest"
    },
    {
      "label": "file",
      "type": "shell",
      "command": "npx jest ${file}",
      "runOptions": {
        "reevaluateOnRerun": false
      }
    },
    {
      "label": "line",
      "type": "shell",
      "command": "npx jest ${file} -t ${selectedText}",
      "runOptions": {
        "reevaluateOnRerun": false
      }
    }
  ]
}